{
  "name": "mob-timer",
  "version": "1.0.0-alpha.1",
  "private": true,
  "scripts": {
    "watch": "concurrently \"tsc -w -p tsconfig.server.json\" \"tsc --noEmit -w\" \"webpack --watch --config webpack.static.config.js\"",
    "build": "npm run build:server && npm run build:static",
    "build:server": "rm -rf dist/ && tsc -p tsconfig.server.json",
    "build:static": "tsc --noEmit && webpack --config webpack.static.config.js",
    "test:server": "mocha --require espower-typescript/guess \"src/server/**/*.spec.ts\"",
    "test:static": "karma start karma.conf.js",
    "test": "npm run test:server && npm run test:static",
    "lint": "eslint 'src/**/*.ts{x,}'",
    "lint:fix": "eslint --fix 'src/**/*.ts{x,}'",
    "start:mongodb": "PERSISTENCE_TYPE=MONGODB node ./start.js",
    "start:firestore": "PERSISTENCE_TYPE=FIRESTORE node ./start.js",
    "start:inmemory": "PERSISTENCE_TYPE=INMEMORY node ./start.js"
  },
  "directories": {
    "test": "src/"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "debug": "4.1.1",
    "event-target-shim": "5.0.1",
    "express": "4.17.1",
    "firebase-admin": "9.0.0",
    "http-errors": "1.7.3",
    "log4js": "6.1.2",
    "mongodb": "3.5.4",
    "morgan": "1.9.1",
    "pug": "2.0.4",
    "react": "16.13.0",
    "react-dom": "16.13.0",
    "rxjs": "6.6.0",
    "serve-favicon": "2.5.0"
  },
  "devDependencies": {
    "@babel/core": "7.10.4",
    "@babel/preset-env": "7.10.4",
    "@babel/preset-react": "7.10.4",
    "@babel/preset-typescript": "7.10.4",
    "@types/chai": "4.2.10",
    "@types/express": "4.17.0",
    "@types/http-errors": "1.6.1",
    "@types/mocha": "8.0.0",
    "@types/mongodb": "3.5.2",
    "@types/morgan": "1.9.0",
    "@types/node": "12.12.29",
    "@types/react": "16.9.23",
    "@types/react-dom": "16.9.5",
    "@types/serve-favicon": "2.5.0",
    "@types/sinon": "7.5.2",
    "@typescript-eslint/eslint-plugin": "2.23.0",
    "@typescript-eslint/parser": "2.23.0",
    "babel-loader": "8.1.0",
    "chai": "4.2.0",
    "concurrently": "5.1.0",
    "eslint": "7.5.0",
    "eslint-config-prettier": "6.10.0",
    "eslint-plugin-prettier": "3.1.2",
    "eslint-plugin-react": "7.19.0",
    "espower-typescript": "9.0.2",
    "husky": "4.3.7",
    "karma": "4.4.1",
    "karma-chrome-launcher": "3.1.0",
    "karma-mocha": "1.3.0",
    "karma-webpack": "4.0.2",
    "lint-staged": "10.0.8",
    "mocha": "8.0.1",
    "power-assert": "1.6.1",
    "prettier": "1.19.1",
    "sinon": "9.0.0",
    "typescript": "3.9.7",
    "webpack": "4.42.0",
    "webpack-cli": "3.3.6"
  }
}
